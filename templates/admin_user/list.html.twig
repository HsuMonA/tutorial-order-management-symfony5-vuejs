{% extends 'base.html.twig' %}

{% block title %}Benutzerliste
{% endblock %}

{% block body %}
	<div class="container">
		<div class="row">
			<table class="table">
				<thead>
					<tr>
						<th>#</th>
						<th>Email</th>
						<th>Firma</th>
					</tr>
				</thead>

				{% for user in users %}
					<tr>
						<td>{{ user.id }}</td>
						<td>{{ user.email }}</td>
						<td>{{ user.company.name }}</td>
					</tr>
				{% endfor %}
			</table>
		</div>
	</div>
{% endblock %}
